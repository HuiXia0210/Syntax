%%writefile question2.cpp
#include <iostream>
using namespace std;

int main()
{
  double regularPrice = 59.95, discount, salePrice;

  //Calculate amount of 20% discount
  discount = regularPrice*0.20;

  //Calculate the sale price by substracting the discount from regular price
  salePrice = regularPrice - discount;

  cout << "Regular price: $" << regularPrice << endl;
  cout << "Discount amount: $" << discount << endl;
  cout << "Sale price: $" << salePrice << endl;
  return 0;
}
