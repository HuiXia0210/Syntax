%%writefile question1.cpp
#include <iostream>
using namespace std;

int main()
{
  double monthlyPay = 6000.0, contribution;

  //Calculate 5% contribution.
  contribution = monthlyPay*0.05;
  cout << "5 percent is $" << contribution
       << " per month.\n";

  //Calculate 7% contribution.
  contribution = monthlyPay*0.07;
  cout << "7 percent is $" << contribution;
  cout << " per month.\n";

  //Calculate 10% contribution.
  contribution = monthlyPay*0.1;
  cout << "10 percent is $" << contribution
       << " per month.\n";

  return 0;
}
